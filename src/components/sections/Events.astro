---
export interface Props {
  title?: string;
  subtitle?: string;
  events?: Array<{
    title: string;
    description?: string;
    date: string;
    time?: string;
    location?: string;
    image?: any;
    link?: string;
  }>;
}

const { title, subtitle, events = [] } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    {(title || subtitle) && (
      <div class="text-center mb-12">
        {title && (
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {events.map((event) => (
        <div class="bg-gray-50 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
          {event.image && (
            <img
              src={event.image}
              alt={event.title}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {event.title}
            </h3>
            {event.description && (
              <p class="text-gray-600 mb-4">
                {event.description}
              </p>
            )}
            <div class="space-y-2 text-sm text-gray-500">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {new Date(event.date).toLocaleDateString()}
              </div>
              {event.time && (
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {event.time}
                </div>
              )}
              {event.location && (
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  {event.location}
                </div>
              )}
            </div>
            {event.link && (
              <a
                href={event.link}
                class="inline-block mt-4 px-4 py-2 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
              >
                Learn More
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>