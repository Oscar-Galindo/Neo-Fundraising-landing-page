{
  "contentTypes": [
    {
      "sys": {
        "id": "fundraiserContent",
        "type": "ContentType"
      },
      "displayField": "sectionName",
      "name": "Fundraiser Content",
      "description": "All fundraiser page content sections",
      "fields": [
        {
          "id": "sectionName",
          "name": "Section Name",
          "type": "Symbol",
          "required": true,
          "localized": false,
          "validations": [
            {
              "in": [
                "hero",
                "story",
                "goal",
                "milestones",
                "impact",
                "updates",
                "supporters",
                "faq",
                "contact"
              ]
            }
          ],
          "helpText": "Which section this content is for"
        },
        {
          "id": "headline",
          "name": "Headline",
          "type": "Symbol",
          "required": false,
          "localized": false,
          "validations": [
            {
              "size": {
                "max": 200
              }
            }
          ]
        },
        {
          "id": "subheadline",
          "name": "Subheadline",
          "type": "Text",
          "required": false,
          "localized": false,
          "validations": [
            {
              "size": {
                "max": 500
              }
            }
          ]
        },
        {
          "id": "description",
          "name": "Description/Body Text",
          "type": "Text",
          "required": false,
          "localized": false,
          "helpText": "Longer description or story content"
        },
        {
          "id": "items",
          "name": "Section Items (JSON)",
          "type": "Object",
          "required": false,
          "localized": false,
          "helpText": "Store milestone items, updates, FAQs, etc as JSON array"
        },
        {
          "id": "image",
          "name": "Section Image",
          "type": "Link",
          "linkType": "Asset",
          "required": false,
          "localized": false,
          "validations": [
            {
              "linkMimetypeGroup": ["image"]
            }
          ]
        },
        {
          "id": "ctaText",
          "name": "CTA Button Text",
          "type": "Symbol",
          "required": false,
          "localized": false,
          "validations": [
            {
              "size": {
                "max": 50
              }
            }
          ]
        },
        {
          "id": "ctaUrl",
          "name": "CTA Button URL",
          "type": "Symbol",
          "required": false,
          "localized": false,
          "helpText": "Link to donation page, GoFundMe, PayPal, etc."
        }
      ]
    },
    {
      "sys": {
        "id": "fundraiserSettings",
        "type": "ContentType"
      },
      "displayField": "fundraiserName",
      "name": "Fundraiser Settings",
      "description": "Core fundraiser configuration and stats",
      "fields": [
        {
          "id": "fundraiserName",
          "name": "Fundraiser Name",
          "type": "Symbol",
          "required": true,
          "localized": false,
          "helpText": "Main fundraiser title"
        },
        {
          "id": "organizerName",
          "name": "Organizer Name",
          "type": "Symbol",
          "required": false,
          "localized": false,
          "helpText": "Who is running this fundraiser"
        },
        {
          "id": "goalAmount",
          "name": "Goal Amount",
          "type": "Number",
          "required": true,
          "localized": false,
          "helpText": "Total fundraising goal (in dollars)"
        },
        {
          "id": "currentAmount",
          "name": "Current Amount Raised",
          "type": "Number",
          "required": true,
          "localized": false,
          "helpText": "Amount raised so far (update this regularly)"
        },
        {
          "id": "donorCount",
          "name": "Number of Donors",
          "type": "Integer",
          "required": false,
          "localized": false,
          "defaultValue": 0
        },
        {
          "id": "endDate",
          "name": "End Date",
          "type": "Date",
          "required": false,
          "localized": false,
          "helpText": "When does the fundraiser end?"
        },
        {
          "id": "primaryDonationUrl",
          "name": "Primary Donation URL",
          "type": "Symbol",
          "required": true,
          "localized": false,
          "helpText": "GoFundMe, PayPal, Venmo, etc. link"
        },
        {
          "id": "secondaryDonationUrl",
          "name": "Secondary Donation URL",
          "type": "Symbol",
          "required": false,
          "localized": false,
          "helpText": "Alternative payment method"
        },
        {
          "id": "contactEmail",
          "name": "Contact Email",
          "type": "Symbol",
          "required": false,
          "localized": false
        },
        {
          "id": "socialLinks",
          "name": "Social Media Links (JSON)",
          "type": "Object",
          "required": false,
          "localized": false,
          "helpText": "Example: {\"facebook\": \"url\", \"instagram\": \"url\", \"twitter\": \"url\"}"
        },
        {
          "id": "brandColors",
          "name": "Brand Colors (JSON)",
          "type": "Object",
          "required": false,
          "localized": false,
          "helpText": "Example: {\"primary\": \"#FF5733\", \"secondary\": \"#33C3FF\"}"
        }
      ]
    },
    {
      "sys": {
        "id": "fundraiserUpdate",
        "type": "ContentType"
      },
      "displayField": "title",
      "name": "Fundraiser Update",
      "description": "News and updates about the fundraiser progress",
      "fields": [
        {
          "id": "title",
          "name": "Update Title",
          "type": "Symbol",
          "required": true,
          "localized": false
        },
        {
          "id": "date",
          "name": "Date",
          "type": "Date",
          "required": true,
          "localized": false
        },
        {
          "id": "content",
          "name": "Update Content",
          "type": "Text",
          "required": true,
          "localized": false
        },
        {
          "id": "image",
          "name": "Update Image",
          "type": "Link",
          "linkType": "Asset",
          "required": false,
          "localized": false,
          "validations": [
            {
              "linkMimetypeGroup": ["image"]
            }
          ]
        },
        {
          "id": "isImportant",
          "name": "Pin to Top",
          "type": "Boolean",
          "required": false,
          "localized": false,
          "defaultValue": false
        }
      ]
    }
  ],
  "sampleEntries": {
