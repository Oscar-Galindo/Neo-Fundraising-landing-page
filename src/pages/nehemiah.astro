---
import CleanBase from '../layouts/CleanBase.astro'
import { optimizeImage } from '../lib/utils/cloudinary'
import { VideoSlider } from '../components/VideoModal'

// Fetch all content from Contentful
const SPACE_ID = import.meta.env.CONTENTFUL_SPACE_ID
const ACCESS_TOKEN = import.meta.env.PUBLIC_CONTENTFUL_ACCESS_TOKEN

async function fetchContentful(contentType: string) {
  const response = await fetch(
    `https://cdn.contentful.com/spaces/${SPACE_ID}/environments/master/entries?content_type=${contentType}&access_token=${ACCESS_TOKEN}&include=3`
  )
  const data = await response.json()
  
  // Also get assets map for resolving
  const assets = data.includes?.Asset || []
  const entries = data.includes?.Entry || []
  
  return {
    fields: data.items[0]?.fields || null,
    assets,
    entries
  }
}

// Helper to get asset URL
function getAssetUrl(asset: any): string | null {
  if (!asset?.fields?.file?.url) return null
  const url = asset.fields.file.url
  return url.startsWith('//') ? `https:${url}` : url
}

const settingsData = await fetchContentful('campaignSettings')
const heroData = await fetchContentful('heroSection')
const statsData = await fetchContentful('statsGrid')
const storyData = await fetchContentful('storySection')
const highlightsData = await fetchContentful('videoHighlights')
const costsData = await fetchContentful('costBreakdown')
const timelineData = await fetchContentful('timeline')
const navigationData = await fetchContentful('navigation')

const settings = settingsData.fields
const hero = heroData.fields
const stats = statsData.fields
const story = storyData.fields
const highlights = highlightsData.fields
const costs = costsData.fields
const timeline = timelineData.fields
const navigation = navigationData.fields

// Process media items if they exist
let processedHighlights = highlights?.highlights || []
if (highlights?.mediaItems) {
  // Map media item references to full data
  processedHighlights = highlights.mediaItems.map((ref: any) => {
    const mediaItem = highlightsData.entries.find((e: any) => e.sys.id === ref.sys.id)
    if (!mediaItem) return null
    
    const thumbnailRef = mediaItem.fields.thumbnail?.sys?.id
    const thumbnailAsset = highlightsData.assets.find((a: any) => a.sys.id === thumbnailRef)
    const thumbnailUrl = getAssetUrl(thumbnailAsset)
    
    // Check for uploaded video file
    const videoRef = mediaItem.fields.video?.sys?.id
    const videoAsset = highlightsData.assets.find((a: any) => a.sys.id === videoRef)
    const videoFileUrl = getAssetUrl(videoAsset)
    
    return {
      title: mediaItem.fields.title,
      category: mediaItem.fields.category,
      thumbnail: thumbnailUrl ? optimizeImage(thumbnailUrl, { width: 400, height: 700, crop: 'fill' }) : null,
      videoUrl: mediaItem.fields.videoUrl, // External URL (YouTube, etc.)
      videoFile: videoFileUrl, // Uploaded video file
      isUploadedVideo: !!videoFileUrl
    }
  }).filter(Boolean)
}
---

<CleanBase title={settings?.campaignTitle || "Nehemiah's Road to Madrid"}>
  <style>
    body {
      background-color: #020617;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }
    .glass-panel {
      background: rgba(2, 6, 23, 0.85);
      backdrop-filter: blur(12px);
    }
    .gradient-text {
      background: linear-gradient(135deg, #fbbf24 0%, #d97706 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    ::-webkit-scrollbar {
      width: 6px;
      height: 6px;
    }
    ::-webkit-scrollbar-track {
      background: #020617;
    }
    ::-webkit-scrollbar-thumb {
      background-color: #1e293b;
      border-radius: 20px;
    }
    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }
    .no-scrollbar {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
  </style>

  <!-- Navigation -->
  <nav class="fixed top-0 w-full z-50 border-b border-white/5 glass-panel">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 h-14 sm:h-16 flex items-center justify-between">
      <div class="flex items-center gap-2 sm:gap-3">
        <div class="w-8 h-8 sm:w-6 sm:h-6 bg-white rounded-full flex items-center justify-center text-[#0f172a] text-[10px] font-semibold tracking-tighter shadow-[0_0_10px_rgba(255,255,255,0.3)]">
          RM
        </div>
        <span class="text-sm font-medium tracking-tight text-white hidden sm:inline-block">
          {navigation?.logoText || settings?.tagline || 'MADRID.DREAM'}
        </span>
        <span class="text-sm font-medium tracking-tight text-white sm:hidden">{navigation?.mobileLogoText || 'NEHEMIAH'}</span>
      </div>
      
      <div class="hidden md:flex items-center gap-8">
        {navigation?.menuItems && navigation.menuItems.map((item: any) => (
          <a href={item.href} class="text-xs font-medium text-slate-400 hover:text-white transition-colors">{item.label}</a>
        ))}
      </div>

      <div class="flex items-center gap-4">
        <a 
          href={settings?.gofundmeUrl || '#'} 
          target="_blank" 
          class="bg-white/5 hover:bg-white/10 active:scale-95 text-white border border-white/10 text-xs font-medium px-4 py-2 rounded-full transition-all flex items-center gap-2"
        >
          <span>{navigation?.donateButtonText || 'Donate'}</span>
          <span class="i-heroicons-heart text-amber-400"></span>
        </a>
      </div>
    </div>
  </nav>

  <main class="pt-24 sm:pt-32 pb-20 px-4 sm:px-6">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-12 gap-8 md:gap-12">
        
        <!-- LEFT COLUMN -->
        <div class="md:col-span-7 flex flex-col gap-12 sm:gap-16">
          
          <!-- 1. HERO -->
          {hero && (
            <div>
              <!-- Status Badge -->
              {hero.statusBadge && (
                <div class="inline-flex items-center gap-2 border border-blue-900/30 bg-blue-950/20 rounded-full pl-1 pr-3 py-1 w-fit mb-6">
                  <span class="bg-blue-600/20 text-blue-400 border border-blue-500/20 text-[10px] font-medium px-2 py-0.5 rounded-full uppercase tracking-wide">
                    {hero.statusBadge}
                  </span>
                  <span class="text-[11px] sm:text-xs text-blue-200/60">{hero.statusDescription}</span>
                </div>
              )}
              
              <h1 class="text-4xl sm:text-5xl md:text-[4.3rem] font-medium tracking-tight text-white mb-5 sm:mb-6 leading-[1.15] md:leading-[1.1]">
                {hero.headline} <br class="hidden sm:block" />
                <span class="gradient-text">{hero.gradientText}</span>
              </h1>
              
              <p class="text-base sm:text-lg text-slate-400 leading-relaxed font-light mb-8 max-w-lg">
                {hero.description}
              </p>

              <!-- Supporters -->
              {hero.supporterAvatars && (
                <div class="flex flex-wrap items-center gap-y-3 gap-x-4 text-sm text-slate-500 mt-2">
                  <div class="flex -space-x-2">
                    {hero.supporterAvatars.slice(0, 4).map((avatar: any) => (
                      <div class="w-8 h-8 rounded-full border-2 border-[#020617] bg-slate-700 flex items-center justify-center text-[10px] text-slate-300">
                        {avatar.initials}
                      </div>
                    ))}
                  </div>
                  <span class="text-slate-400 text-xs sm:text-sm">
                    Joining {hero.supporterCount}+ supporters
                  </span>
                </div>
              )}
            </div>
          )}

          <!-- 2. STATS -->
          {stats && stats.stats && (
            <div class="grid grid-cols-3 gap-2 sm:gap-4 border-y border-white/5 py-6 sm:py-8">
              {stats.stats.map((stat: any) => (
                <div class="text-center sm:text-left">
                  <div class="text-xl sm:text-2xl font-medium tracking-tight text-white">{stat.value}</div>
                  <div class="text-[10px] sm:text-xs text-slate-500 mt-1">{stat.label}</div>
                </div>
              ))}
            </div>
          )}

          <!-- 3. STORY -->
          {story && (
            <section id="story" class="scroll-mt-24">
              <div class="flex items-center gap-3 mb-5">
                <div class="p-2 bg-slate-800 border border-white/5 rounded-lg shadow-sm">
                  <span class={`i-heroicons-${story.icon || 'book-open'} text-white w-4 h-4`}></span>
                </div>
                <h2 class="text-lg sm:text-xl font-medium tracking-tight text-white">{story.title}</h2>
              </div>
              <div class="prose prose-invert prose-sm max-w-none text-slate-400 leading-7">
                <div set:html={story.content} />
              </div>
            </section>
          )}

          <!-- 4. HIGHLIGHTS -->
          {processedHighlights && processedHighlights.length > 0 && (
            <section id="highlights" class="relative scroll-mt-24">
              <div class="flex items-center justify-between gap-3 mb-5">
                <div class="flex items-center gap-3">
                  <div class="p-2 bg-slate-800 border border-white/5 rounded-lg shadow-sm">
                    <span class="i-heroicons-play-circle text-white w-4 h-4"></span>
                  </div>
                  <h2 class="text-lg sm:text-xl font-medium tracking-tight text-white">{highlights?.sectionTitle || 'In Action'}</h2>
                </div>
              </div>

              <div class="-mx-4 sm:mx-0 px-4 sm:px-0">
                <VideoSlider highlights={processedHighlights} client:load />
              </div>
            </section>
          )}

          <!-- 5. COST BREAKDOWN -->
          {costs && costs.items && (
            <section id="breakdown" class="scroll-mt-24">
              <div class="flex items-center gap-3 mb-5">
                <div class="p-2 bg-slate-800 border border-white/5 rounded-lg shadow-sm">
                  <span class="i-heroicons-chart-pie text-white w-4 h-4"></span>
                </div>
                <h2 class="text-lg sm:text-xl font-medium tracking-tight text-white">{costs.sectionTitle || 'Cost Breakdown'}</h2>
              </div>
              
              <div class="bg-[#0f172a] border border-white/5 rounded-xl overflow-hidden shadow-sm">
                {costs.items.map((item: any) => (
                  <div class="flex items-center justify-between p-4 border-b border-white/5 hover:bg-white/[0.02] transition-colors">
                    <div class="flex items-center gap-3">
                      <div class={`w-8 h-8 rounded-full bg-${item.color}-500/10 flex items-center justify-center shrink-0`}>
                        <span class={`i-heroicons-${item.icon} text-${item.color}-400 w-4 h-4`}></span>
                      </div>
                      <span class="text-sm font-medium text-slate-300">{item.title}</span>
                    </div>
                    <span class="text-sm font-medium text-white">${item.amount.toLocaleString()}</span>
                  </div>
                ))}
                <div class="flex items-center justify-between p-4 bg-white/5">
                  <span class="text-sm font-medium text-slate-400">Total Goal</span>
                  <span class="text-sm font-semibold text-amber-400">${costs.totalAmount?.toLocaleString()}</span>
                </div>
              </div>
              {costs.disclaimer && (
                <p class="text-[10px] sm:text-xs text-slate-600 mt-3 text-center">{costs.disclaimer}</p>
              )}
            </section>
          )}

          <!-- 6. TIMELINE -->
          {timeline && timeline.milestones && (
            <section id="timeline" class="scroll-mt-24">
              <div class="flex items-center gap-3 mb-8">
                <div class="p-2 bg-slate-800 border border-white/5 rounded-lg shadow-sm">
                  <span class="i-heroicons-calendar text-white w-4 h-4"></span>
                </div>
                <h2 class="text-lg sm:text-xl font-medium tracking-tight text-white">{timeline.sectionTitle || 'The Plan'}</h2>
              </div>

              <div class="relative pl-8 border-l border-white/10 space-y-8">
                {timeline.milestones.map((milestone: any, index: number) => (
                  <div class="relative group">
                    <div class={`absolute -left-[37px] w-4 h-4 rounded-full border-2 border-[#020617] ${
                      milestone.status === 'completed' ? 'bg-blue-600 shadow-[0_0_10px_rgba(37,99,235,0.4)]' :
                      milestone.status === 'current' ? 'bg-amber-400 shadow-[0_0_10px_rgba(251,191,36,0.4)]' :
                      'bg-white'
                    } group-hover:scale-125 transition-transform`}></div>
                    <h3 class="text-sm font-medium text-white">{milestone.title}</h3>
                    <p class="text-[10px] sm:text-xs text-slate-500 mt-1 font-mono">{milestone.date}</p>
                    <p class="text-sm text-slate-400 mt-2">{milestone.description}</p>
                  </div>
                ))}
              </div>
            </section>
          )}

        </div>

        <!-- RIGHT COLUMN: GoFundMe Widget -->
        <div class="md:col-span-5 relative">
          <div class="md:sticky md:top-28">
            <div class="rounded-2xl overflow-hidden shadow-2xl shadow-black/50 border border-white/5 bg-white transform hover:scale-[1.01] transition-transform duration-500">
              <div class="gfm-embed" data-url={`${settings?.gofundmeUrl}/widget/large`}></div>
              <script defer src="https://www.gofundme.com/static/js/embed.js"></script>
            </div>
            <div class="mt-4 flex items-center justify-center gap-2 text-slate-500">
              <span class="i-heroicons-shield-check w-3 h-3"></span>
              <span class="text-[10px]">Secure payments via GoFundMe</span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="border-t border-white/5 bg-[#020617] py-10 sm:py-12">
    <div class="max-w-5xl mx-auto px-6 flex flex-col sm:flex-row justify-between items-center gap-6">
      <div class="flex items-center gap-2">
        <div class="w-4 h-4 bg-white/10 rounded-full"></div>
        <span class="text-xs font-medium text-slate-600">{navigation?.footerTagline || 'Hala Madrid y Nada Mas'}</span>
      </div>
      
      <div class="flex gap-6">
        {navigation?.footerLinks && navigation.footerLinks.map((link: any) => (
          <a href={link.href} class="text-xs text-slate-500 hover:text-white transition-colors">{link.label}</a>
        ))}
      </div>
    </div>
  </footer>
</CleanBase>

