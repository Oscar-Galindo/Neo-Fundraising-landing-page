# Production Environment Variables
# Copy this to .env for local development or set in your hosting platform

# Site Configuration
SITE_TYPE=church # or 'business'
SITE_URL=https://yourdomain.com
SITE_NAME="Your Organization Name"

# Contentful (Read-only tokens for production)
CONTENTFUL_SPACE_ID=jn2q4lg00k6r
PUBLIC_CONTENTFUL_ACCESS_TOKEN=your_delivery_api_token
CONTENTFUL_ACCESS_TOKEN=your_delivery_api_token
CONTENTFUL_PREVIEW_TOKEN=your_preview_api_token
CONTENTFUL_ENVIRONMENT=master

# Cloudinary (Public configuration only)
CLOUDINARY_CLOUD_NAME=your_cloud_name

# GoHighLevel
GHL_API_KEY=your_gohighlevel_api_key
GHL_LOCATION_ID=your_location_id

# Church-specific (if SITE_TYPE=church)
CHURCH_ONLINE_ID=your_church_online_platform_id
TITHELY_CHURCH_ID=your_tithely_church_id

# Analytics (optional)
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
PUBLIC_GTM_ID=GTM-XXXXXXX

# Security
PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key